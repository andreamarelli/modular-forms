{
    "name": "andreamarelli/modular-forms",
    "description": "A package to build modular data collection forms",
    "authors": [
        {
            "name": "Andrea Marelli",
            "email": "andrea.marelli.dev@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-imagick": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-zip": "*",
        "conedevelopment/i18n": "^1.1",
        "wa72/htmlpagedom": "^3.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "AndreaMarelli\\ModularForms\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "AndreaMarelli\\ModularForms\\ServiceProvider"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
